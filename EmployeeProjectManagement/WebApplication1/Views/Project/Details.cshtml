@model WebApplication1.Models.Project

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper AuthoringTagHelpers.TagHelpers.EmailTagHelper, AuthoringTagHelpers
@{
    ViewData["Title"] = "Details";
}
@* Details View Shows the project Details *@
<h2 class="text-center text-info">Project Details</h2>
@Html.AntiForgeryToken()
<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2"><label asp-for="ProjectID">Project ID</label></dt>
        <dd class="col-sm-10"><label asp-for="ProjectID">@Model.ProjectID</label></dd>

        <dt class="col-sm-2"><label asp-for="Name">Project Name</label></dt>
        <dd class="col-sm-10"><label asp-for="Name">@Model.Name</label></dd>

        <dt class="col-sm-2"><label asp-for="Description">Project Description</label></dt>
        <dd class="col-sm-10"><label asp-for="Description">@Model.Description</label></dd>
    </dl>
</div>
<a asp-action="Index" class="btn btn-info">Back</a>

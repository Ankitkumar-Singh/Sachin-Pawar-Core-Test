@model WebApplication1.Models.Employee

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper AuthoringTagHelpers.TagHelpers.EmailTagHelper, AuthoringTagHelpers

@{
    ViewData["Title"] = "Details";
}
<h2 class="text-center text-info">Employee Details</h2>
@Html.AntiForgeryToken()
<div>
    @* Details view shows the details of the employee *@
    <hr />
    <dl class="row">

        <dt class="col-sm-2"><label asp-for="EmployeeID">Employee ID</label></dt>
        <dd class="col-sm-10"><label asp-for="EmployeeID">@Model.EmployeeID</label></dd>

        <dt class="col-sm-2"><label asp-for="FirstName">First Name</label></dt>
        <dd class="col-sm-10"><label asp-for="EmployeeID">@Model.FirstName</label></dd>

        <dt class="col-sm-2"><label asp-for="LastName">Last Name</label></dt>
        <dd class="col-sm-10"><label asp-for="LastName">@Model.LastName</label></dd>

        <dt class="col-sm-2"><label asp-for="LastName">Address</label></dt>
        <dd class="col-sm-10"><label asp-for="LastName">@Model.Address</label></dd>

        <dt class="col-sm-2"><label asp-for="Email">Email-ID</label></dt>
        <dd class="col-sm-10"><label asp-for="Email">@Model.Email</label></dd>

        <dt class="col-sm-2"><label asp-for="Contact">Contact</label></dt>
        <dd class="col-sm-10"><label asp-for="Contact">@Model.Contact</label></dd>

        <dt class="col-sm-2"><label asp-for="Gender">Gender</label></dt>
        <dd class="col-sm-10"><label asp-for="Gender">@Model.Gender</label></dd>

        <dt class="col-sm-2"><label asp-for="DateofBirth">Date of Birth</label></dt>
        <dd class="col-sm-10"><label asp-for="DateofBirth">@Model.DateofBirth</label></dd>

        <dt class="col-sm-2"><label asp-for="Department">Department Name</label></dt>
        <dd class="col-sm-10"><label asp-for="Department">@Model.Department</label></dd>

        <dt class="col-sm-2"><label asp-for="ProjectID">ProjectID</label></dt>
        <dd class="col-sm-10"><label asp-for="ProjectID">@Model.ProjectID</label></dd>

        <dt class="col-sm-2"><label asp-for="Status">Employee Status</label></dt>
        <dd class="col-sm-10"><label asp-for="Status">@Model.Status</label></dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-info">Back</a>
</div>